<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page">

    <TextView
        android:id="@+id/tvSettingContactSettingRemind"
        style="@style/text_small"
        android:layout_width="match_parent"
        android:background="@color/alpha_3"
        android:gravity="center"
        android:padding="@dimen/item_left_tv_padding"
        android:visibility="gone" />

    <ScrollView style="@style/match_match">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llSettingAppSettingContainer"
                style="@style/ll_vertical_match_wrap">

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout style="@style/content_item_white">

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="2"
                        android:text="上次测量时间" />

                    <TextView
                        android:id="@+id/text1"
                        style="@style/content_item_lf_tv"
                        android:layout_weight="0"
                        android:text="无"
                        android:paddingRight="12dp"/>
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout style="@style/content_item_white">

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="2"
                        android:text="上次测量结果" />

                    <TextView
                        android:id="@+id/text2"
                        style="@style/content_item_lf_tv"
                        android:layout_weight="0"
                        android:text="无"
                        android:paddingRight="12dp"/>
                </LinearLayout>

                <View
                    style="@style/divider_horizontal_1px"
                    android:layout_marginBottom="@dimen/item_distance" />

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:background="@drawable/eye_selector"
                        android:padding="20dp"
                        android:id="@+id/eye_test"
                        style="@style/content_item_rt"/>
                </LinearLayout>
                <View
                    style="@style/divider_horizontal_1px"
                    android:layout_marginBottom="@dimen/item_distance" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="保持适当距离（1.5m）点击开始"
                    android:textColor="@color/gray">
                </TextView>
                <View
                    style="@style/divider_horizontal_1px"
                    android:layout_marginBottom="@dimen/item_distance" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>