<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DEMO.DemoThreadPoolActivity"
    style="@style/activity_page">

    <RelativeLayout style="@style/topbar_bg">

        <ImageButton style="@style/topbar_return_img" />

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="Thread Pool" />

    </RelativeLayout>


    <ScrollView style="@style/match_match">

        <LinearLayout
            style="@style/ll_vertical_match_match"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/btnDemoThreadPoolDefault"
                android:text="default thread pool"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvDemoThreadPoolDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnDemoThreadPoolCache"
                android:text="cache thread pool"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvDemoThreadPoolCache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnDemoThreadPoolSingle"
                android:text="single thread pool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvDemoThreadPoolSingle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>